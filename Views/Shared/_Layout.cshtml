                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" onclick="submitSearch('StyleId', '')">Tất cả</a></li>
                    @if (ViewData["StyleList"] != null)
                    {
                        @foreach (var item in (SelectList)ViewData["StyleList"])
