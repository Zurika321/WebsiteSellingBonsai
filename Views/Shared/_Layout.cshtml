                    <li><a class="dropdown-item" onclick="submitSearch('yearOld',false,1,30)">Cây trẻ 1 -30 tuổi</a></li>
                    <li><a class="dropdown-item" onclick="submitSearch('yearOld',false,30,70)">Cây trung niên 30 -70 tuổi </a></li>
                    <li><a class="dropdown-item" onclick="submitSearch('yearOld',false,70,-1)">Cây cổ thụ 70^ tuổi </a></li>
                </ul>
            </div>

            <!-- Menu: Phân loại theo phong cách -->
            <div class="d-flex align-items-center dropdown linknavbar">
                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">Phong cách</a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" onclick="submitSearch('Style', '')">Tất cả</a></li>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["StyleList"])
                        {
                                <li><a class="dropdown-item" onclick="submitSearch('Style', '@item.Value')">@item.Text</a></li>
                        }
                </ul>
            </div>

            <!-- Menu: Phân loại theo ý nghĩa phong thủy -->
            <div class="d-flex align-items-center dropdown linknavbar">
                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">Ý nghĩa phong thủy</a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" onclick="submitSearch('GeneralMeaning', '')">Tất cả</a></li>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["GeneralMeaningList"])
                    {
                            <li><a class="dropdown-item" onclick="submitSearch('GeneralMeaning', '@item.Value')">@item.Text</a></li>
                    }
                </ul>
            </div>
        </div>
        <form method="Get" asp-action="Index" asp-controller="Home" id="searchForm" class="col col-lg-auto d-flex align-items-center" style="position: relative;">
            <input type="text" name="search" 
                   style="width: calc(100% - 50px);border:1px solid rgb(85, 215, 111);" 
                   id="search" 
                   placeholder="Search here" 
                   value="@(ViewData["Search"] ?? "")" />
                   <input type="hidden" id="sizeMin" name="sizeMin" value="@(ViewData["sizeMin"] ?? "")" />
                   <input type="hidden" id="sizeMax" name="sizeMax" value="@(ViewData["sizeMax"] ?? "")" />
                   <input type="hidden" id="yearOldMin" name="yearOldMin" value="@(ViewData["yearOldMin"] ?? "")" />
                   <input type="hidden" id="yearOldMax" name="yearOldMax" value="@(ViewData["yearOldMax"] ?? "")" />
                   <input type="hidden" id="TypeId" name="TypeId" value="@(ViewData["TypeId"] ?? "")" />
                   <input type="hidden" id="StyleId" name="StyleId" value="@(ViewData["StyleId"] ?? "")" />
                   <input type="hidden" id="GeneralMeaningId" name="GeneralMeaningId" value="@(ViewData["GeneralMeaningId"] ?? "")" />
            <button style="border:1px solid green;background-color: rgb(85, 215, 111)" type="submit">
                <i class="fa-solid fa-magnifying-glass mx-2 text-light"></i>
            </button>
            <div id="menu_search">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
            </div>
        </form>
        <script>
            function submitSearch(WhatAttribute,Id,min,max) {
                if (min && max){
                    let Name = WhatAttribute + "Min"
                    document.getElementById(Name).value = min;
                    Name = WhatAttribute + "Max"
                    document.getElementById(Name).value = max;
                }else{
                    let Name = WhatAttribute + "Id"
                    document.getElementById(Name).value = Id;
                }
                document.getElementById("searchForm").submit();
            }
        </script>
      </div>
    </div>

