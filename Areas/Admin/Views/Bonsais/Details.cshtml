@model WebsiteSellingBonsaiAPI.DTOS.BonsaiDTO
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bonsai</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BonsaiName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BonsaiName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageOld))
            {
                <img src="@Url.Content("~/" + Model.ImageOld)" alt="Product Image" style="max-height: 200px;" />
            }
            else
            {
                <img src="https://w7.pngwing.com/pngs/819/548/png-transparent-photo-image-landscape-icon-images-thumbnail.png"
                style="max-height: 300px"/>
            }
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FengShuiMeaning)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FengShuiMeaning)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Model.Price.ToString("F3") vnđ
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearOld)
        </dt>
        <dd class = "col-sm-10">
