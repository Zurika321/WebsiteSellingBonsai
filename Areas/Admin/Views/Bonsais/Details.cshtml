        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GeneralMeaning.Meaning)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Style)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Style.Name)
        </dd>
    </dl>
</div>
