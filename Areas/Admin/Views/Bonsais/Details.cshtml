        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MinLife)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinLife)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxLife)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxLife)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
